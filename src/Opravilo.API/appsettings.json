{
  "AllowedHosts": "*",

  "Auth": {
    "key": "test_secret_key_temp_123",
    "lifetime": "1440",
    "issuer": "api",
    "audience": "client"
  },
  
  "ConnectionStrings": {
    "Opravilo": "Server=localhost;Port=5432;Database=opravilo;User Id=postgres;Password=2282;"
  },
  
  "Serilog" : {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "WithThreadId" ],
    "WriteTo": [
      { 
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} Tid={ThreadId} Context={SourceContext}] {Message} {Exception} {NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} Tid={ThreadId} Context={SourceContext}] {Message} {Exception} {NewLine}"
        }
      }
    ]
  },
}
